{
	"app-id": "com.bay12games.DwarfFortress",
	"branch": "0.43.03",
	"runtime": "org.gnome.Platform",
	"runtime-version": "3.22",
	"sdk": "org.gnome.Sdk",
	"command": "dwarf-fortress.bin",
	"finish-args": [
		"--persist=df_linux",
		"--share=ipc", "--socket=x11", "--device=dri",
		"--socket=pulseaudio"
	],
	"cleanup": [
		"/include",
		"/lib/pkgconfig",
		"/lib/*.la",
		"/lib/*.a",
		"/share/aclocal",
		"/bin/c*", "/bin/i*", "/bin/n*", "/bin/r*", "/bin/s*", "/bin/t*",
		"Makefile"
	],
	"modules": [
		"deps/glu-9.0.0.json",
		"deps/glew-2.0.0.json",
		"deps/libsdl-1.2.15.json",
		"deps/sdl_image-1.2.12.json",
		"deps/sdl_ttf-2.0.11.json",
		"deps/openal-1.17.2.json",
		"deps/ncurses-6.0.json",
		{
			"name": "dwarf-fortress",
			"no-autogen": true,
			"build-options": {
				"no-debuginfo": true
			},
			"cleanup": [
				"/share/man",
				"/lib/debug"
			],
			"sources": [
				{
					"type": "archive",
					"url": "http://bay12games.com/dwarves/df_43_03_linux.tar.bz2",
					"sha256": "8725cb00188b4282fd5a3c4be10c3255f837b951ca48af90fa3a351e3a818337"
				},
				{
					"type": "shell",
					"commands": [
						"rm df libs/lib*.so*"
					]
				},
				{
					"type": "file",
					"path": "com.bay12games.DwarfFortress.desktop",
					"dest-filename": "com.bay12games.DwarfFortress.desktop"
				},
				{
					"type": "file",
					"path": "com.bay12games.DwarfFortress.png",
					"dest-filename": "com.bay12games.DwarfFortress.png"
				},
				{
					"type": "file",
					"path": "dwarf-fortress.bin",
					"dest-filename": "dwarf-fortress.bin"
				},
				{
					"type": "file",
					"path": "df-Makefile",
					"dest-filename": "Makefile"
				}
			]
		},
		{
			"name": "dfhack",
			"no-autogen": true,
			"sources": [
				{
					"type": "archive",
					"url": "https://github.com/DFHack/dfhack/releases/download/0.43.03-r1/dfhack-0.43.03-r1-Linux-gcc-4.8.1.tar.bz2",
					"sha256": "7bcfe04c63687107432c4755873ac2da97e8ca3f3990392fb023cfd39f00cfb3",
					"strip-components": 0
				},
				{
					"type": "file",
					"path": "hack-Makefile",
					"dest-filename": "Makefile"
				}
			]
		}
	]
}
