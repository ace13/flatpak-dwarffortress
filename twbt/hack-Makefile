all:
	true

install:
	mkdir -p /app/twbt/data/art
	mkdir -p /app/twbt/data/init
	mkdir -p /app/twbt/hack/lua
	mkdir -p /app/twbt/hack/plugins
	cp *.png /app/twbt/data/art/
	cp overrides.txt /app/twbt/data/init/
	cp */*.so /app/twbt/hack/plugins/
	cp *.lua /app/twbt/hack/lua/
	install com.bay12games.DwarfFortress.twbt.desktop /app/share/applications
