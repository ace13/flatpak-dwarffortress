{
    "name": "dwarf-fortress",
    "no-autogen": true,
    "build-options": {
        "no-debuginfo": true
    },
    "arch": {
        "i386": {
            "disabled": true
        }
    },
    "cleanup": [
        "/share/man",
        "/lib/debug"
    ],
    "sources": [
        {
            "type": "archive",
            "url": "http://bay12games.com/dwarves/df_43_05_linux.tar.bz2",
            "sha256": "856c13170e8beefb5419ae71ee26c85db9716b3ebd4c7348aa44b896bd490be4"
    	},
        {
            "type": "shell",
            "commands": [
                "rm df libs/lib*.so*"
            ]
        },
        {
            "type": "file",
            "path": "com.bay12games.DwarfFortress.desktop",
            "dest-filename": "com.bay12games.DwarfFortress.desktop"
        },
        {
            "type": "file",
            "path": "com.bay12games.DwarfFortress.png",
            "dest-filename": "com.bay12games.DwarfFortress.png"
        },
        {
            "type": "file",
            "path": "dwarf-fortress.bin",
            "dest-filename": "dwarf-fortress.bin"
        },
        {
            "type": "file",
            "path": "Makefile",
            "dest-filename": "Makefile"
        }
    ]
}
