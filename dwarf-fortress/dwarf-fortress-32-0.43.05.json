{
    "name": "dwarf-fortress-32",
    "no-autogen": true,
    "build-options": {
        "no-debuginfo": true
    },
    "arch": {
        "x86_64": {
            "disabled": true
        }
    },
    "cleanup": [
        "/share/man",
        "/lib/debug"
    ],
    "sources": [
        {
            "type": "archive",
            "url": "http://bay12games.com/dwarves/df_43_05_linux32.tar.bz2",
            "sha256": "0334e6b35ecc36949f5c60ffc1eb46fade3365b55a44f2e11fd4ae799ba7819a"
    	},
        {
            "type": "shell",
            "commands": [
                "rm df libs/lib*.so*",
                "sed -e 's/\\(#include <iostream>\\)/\\1\\n#include <cmath>/' -i g_src/ttf_manager.cpp"
            ]
        },
        {
            "type": "file",
            "path": "com.bay12games.DwarfFortress.desktop",
            "dest-filename": "com.bay12games.DwarfFortress.desktop"
        },
        {
            "type": "file",
            "path": "com.bay12games.DwarfFortress.png",
            "dest-filename": "com.bay12games.DwarfFortress.png"
        },
        {
            "type": "file",
            "path": "dwarf-fortress.bin",
            "dest-filename": "dwarf-fortress.bin"
        },
        {
            "type": "file",
            "path": "Makefile",
            "dest-filename": "Makefile"
        }
    ]
}
